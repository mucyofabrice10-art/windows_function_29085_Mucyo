SELECT region,
       product_name,
       total_sold,
       rank_per_region
FROM (
    SELECT c.region,
           p.product_name,
           SUM(t.quantity) AS total_sold,
           RANK() OVER (PARTITION BY c.region ORDER BY SUM(t.quantity) DESC) AS rank_per_region
    FROM transactions t
    JOIN customers c ON t.customer_id = c.customer_id
    JOIN products p ON t.product_id = p.product_id
    GROUP BY c.region, p.product_name
) ranked_products
WHERE rank_per_region <= 5
ORDER BY region, rank_per_region;





##DENSE_RANK()

SELECT region,
       product_name,
       total_sold,
       DENSE_RANK() OVER (PARTITION BY region ORDER BY total_sold DESC) AS dense_rank_region
FROM (
    SELECT c.region,
           p.product_name,
           SUM(t.quantity) AS total_sold
    FROM transactions t
    JOIN customers c ON t.customer_id = c.customer_id
    JOIN products p ON t.product_id = p.product_id
    GROUP BY c.region, p.product_name
) sub
ORDER BY region, dense_rank_region;





PERCENTAGE RANK()
SELECT region,
       product_name,
       total_sold,
       PERCENT_RANK() OVER (PARTITION BY region ORDER BY total_sold DESC) AS percent_rank_region
FROM (
    SELECT c.region,
           p.product_name,
           SUM(t.quantity) AS total_sold
    FROM transactions t
    JOIN customers c ON t.customer_id = c.customer_id
    JOIN products p ON t.product_id = p.product_id
    GROUP BY c.region, p.product_name
) sub
ORDER BY region, percent_rank_region;






##MIN()

SELECT
    t.transaction_date,
    (t.quantity * p.price) AS transaction_amount,
    MIN(t.quantity * p.price) OVER (
        ORDER BY t.transaction_date
        RANGE BETWEEN UNBOUNDED PRECEDING AND CURRENT ROW
    ) AS cumulative_min
FROM transactions t
JOIN products p ON t.product_id = p.product_id
ORDER BY t.transaction_date;

AVG()

SELECT
    t.transaction_date,
    (t.quantity * p.price) AS transaction_amount,
    AVG(t.quantity * p.price) OVER (
        ORDER BY t.transaction_date
        RANGE BETWEEN UNBOUNDED PRECEDING AND CURRENT ROW
    ) AS cumulative_avg
FROM transactions t
JOIN products p ON t.product_id = p.product_id
ORDER BY t.transaction_date;

##MAX()

SELECT
    t.transaction_date,
    (t.quantity * p.price) AS transaction_amount,
    MAX(t.quantity * p.price) OVER (
        ORDER BY t.transaction_date
        RANGE BETWEEN UNBOUNDED PRECEDING AND CURRENT ROW
    ) AS peak_amount
FROM transactions t
JOIN products p ON t.product_id = p.product_id
ORDER BY t.transaction_date;


##LAG()
SELECT
    t.transaction_date,
    (t.quantity * p.price) AS transaction_amount,
    -- Get previous day's amount
    LAG(t.quantity * p.price, 1) OVER (
        ORDER BY t.transaction_date
    ) AS previous_amount,
    -- Calculate day-over-day change
    (t.quantity * p.price) - LAG(t.quantity * p.price, 1) OVER (
        ORDER BY t.transaction_date
    ) AS day_over_day_change,
    -- Calculate percentage growth
    ROUND(
        ((t.quantity * p.price) - LAG(t.quantity * p.price, 1) OVER (
            ORDER BY t.transaction_date
        )) / LAG(t.quantity * p.price, 1) OVER (
            ORDER BY t.transaction_date
        ) * 100, 2
    ) AS growth_percentage
FROM transactions t
JOIN products p ON t.product_id = p.product_id
ORDER BY t.transaction_date;


##LEAD()

SELECT
    t.transaction_date,
    (t.quantity * p.price) AS transaction_amount,
    -- Get next day's amount
    LEAD(t.quantity * p.price, 1) OVER (
        ORDER BY t.transaction_date
    ) AS next_day_amount,
    -- Compare current to next (for planning)
    LEAD(t.quantity * p.price, 1) OVER (
        ORDER BY t.transaction_date
    ) - (t.quantity * p.price) AS change_to_next_day
FROM transactions t
JOIN products p ON t.product_id = p.product_id
ORDER BY t.transaction_date;


##NTILE()
WITH customer_spending AS (
    SELECT
        t.customer_id,
        SUM(t.quantity * p.price) AS total_spent
    FROM transactions t
    JOIN products p ON t.product_id = p.product_id
    GROUP BY t.customer_id
)
SELECT
    customer_id,
    total_spent,
    NTILE(4) OVER (ORDER BY total_spent) AS spending_segment,
    CASE NTILE(4) OVER (ORDER BY total_spent)
        WHEN 1 THEN 'Low Spender'
        WHEN 2 THEN 'Medium-Low Spender'
        WHEN 3 THEN 'Medium-High Spender'
        WHEN 4 THEN 'High Spender'
    END AS customer_segment
FROM customer_spending
ORDER BY total_spent;


##CUME_STD()
WITH customer_spending AS (
    SELECT
        t.customer_id,
        SUM(t.quantity * p.price) AS total_spent
    FROM transactions t
    JOIN products p ON t.product_id = p.product_id
    GROUP BY t.customer_id
)
SELECT
    customer_id,
    total_spent,
    ROUND(CUME_DIST() OVER (ORDER BY total_spent), 3) AS cumulative_distribution,
    ROUND(CUME_DIST() OVER (ORDER BY total_spent) * 100, 1) AS percentile_rank,
    -- Segment by percentile
    CASE
        WHEN CUME_DIST() OVER (ORDER BY total_spent) <= 0.25 THEN 'Bottom 25%'
        WHEN CUME_DIST() OVER (ORDER BY total_spent) <= 0.50 THEN '25-50%'
        WHEN CUME_DIST() OVER (ORDER BY total_spent) <= 0.75 THEN '50-75%'
        ELSE 'Top 25%'
    END AS percentile_segment
FROM customer_spending
ORDER BY total_spent;


##ROW_NUMBERS()
SELECT
    t.customer_id,
    t.transaction_date,
    (t.quantity * p.price) AS transaction_amount,
    ROW_NUMBER() OVER (
        PARTITION BY t.customer_id
        ORDER BY (t.quantity * p.price) DESC
    ) AS transaction_rank
FROM transactions t
JOIN products p ON t.product_id = p.product_id
ORDER BY t.customer_id, transaction_rank;


##ROWS()
SELECT
    t.transaction_date,
    (t.quantity * p.price) AS amount,
    SUM(t.quantity * p.price) OVER (
        ORDER BY t.transaction_date
        ROWS BETWEEN 2 PRECEDING AND CURRENT ROW
    ) AS last_3_days_sum
FROM transactions t
JOIN products p ON t.product_id = p.product_id
ORDER BY t.transaction_date;

##RANGE()
-- Sum of all rows with SAME DATE as current row
SELECT
    t.transaction_date,
    (t.quantity * p.price) AS amount,
    SUM(t.quantity * p.price) OVER (
        ORDER BY t.transaction_date
        RANGE BETWEEN CURRENT ROW AND CURRENT ROW
    ) AS daily_total
FROM transactions t
JOIN products p ON t.product_id = p.product_id
ORDER BY t.transaction_date;
